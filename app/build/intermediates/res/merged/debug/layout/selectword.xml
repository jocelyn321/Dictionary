<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/select_layout"
    android:background="@drawable/pink"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="20dp"
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/LinearLayout01" 
        android:layout_marginTop="10px"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/abc"
            android:src="@drawable/abc"
            android:layout_width="wrap_content"
            android:layout_height="50dip"/>
        <AutoCompleteTextView
            android:hint="请输入单词" 
            android:id="@+id/input_act" 
            android:layout_width="210dip"
            android:layout_height="wrap_content">
        </AutoCompleteTextView>
        <ImageButton 
            android:id="@+id/select_btn" 
            android:src="@drawable/ic_search_category_default"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content">
        </ImageButton>
    </LinearLayout>  
    <RelativeLayout android:id="@+id/sel_result_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <TextView android:id="@+id/select_word"
        android:visibility="invisible"
        android:textSize="20dip"
        android:layout_marginTop="16px"
        android:layout_marginLeft="20px"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/select_word"
            android:layout_marginLeft="15px"
            android:layout_marginTop="20px"
            android:layout_marginRight="15px"
            android:visibility="invisible" />
    
    <TextView android:id="@+id/select_word_mean"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="25dip"
        android:drawableLeft="@drawable/point"
        android:layout_marginTop="18px"
        android:layout_marginLeft="20px"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@id/show"/>
    
    <ImageView android:id="@+id/add_note" 
        android:visibility="invisible"
        android:src="@drawable/add_note"
        android:layout_marginTop="16px"
        android:layout_marginRight="28px"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_below="@id/select_btn"
        android:layout_alignParentRight="true"/>
   </RelativeLayout>
</LinearLayout>